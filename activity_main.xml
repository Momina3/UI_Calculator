<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        >

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:text="@string/calculationString"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView1"
            android:paddingRight="20dp"
            android:text="@string/CalculationString2"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/AnswerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextView2"
            android:paddingTop="160dp"
            android:paddingRight="20dp"
            android:text="@string/Answer"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/AnswerText"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="17dp"
            android:background="#1A1A1A"
            android:gravity="center">

            <Button
                android:id="@+id/button1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:background="@drawable/circle_red_button"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:layout_toRightOf="@id/button1"
                android:background="@drawable/circle_grey_button"
                android:text="("
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:layout_toRightOf="@id/button2"
                android:background="@drawable/circle_grey_button"
                android:text=")"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:background="@drawable/circle_orange_button"
                android:layout_toRightOf="@id/button3"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/button1"
                android:layout_margin="15dp"
                android:background="@drawable/circle_green_button"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/button2"
                android:layout_margin="15dp"
                android:layout_toRightOf="@id/button5"
                android:background="@drawable/circle_green_button"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/button3"
                android:layout_margin="15dp"
                android:layout_toRightOf="@id/button6"
                android:background="@drawable/circle_green_button"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/button4"
                android:layout_margin="15dp"
                android:layout_toRightOf="@id/button7"
                android:background="@drawable/circle_orange_button"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/button5"
                android:layout_margin="15dp"
                android:background="@drawable/circle_green_button"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button10"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/button6"
                android:layout_margin="15dp"
                android:layout_toRightOf="@id/button9"
                android:background="@drawable/circle_green_button"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/button7"
                android:layout_margin="15dp"
                android:layout_toRightOf="@id/button10"
                android:background="@drawable/circle_green_button"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/button8"
                android:layout_margin="15dp"
                android:layout_toRightOf="@id/button11"
                android:background="@drawable/circle_orange_button"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/button9"
                android:layout_margin="15dp"
                android:background="@drawable/circle_green_button"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/button10"
                android:layout_margin="15dp"
                android:layout_toRightOf="@id/button13"
                android:background="@drawable/circle_green_button"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button15"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/button11"
                android:layout_margin="15dp"
                android:layout_toRightOf="@id/button14"
                android:background="@drawable/circle_green_button"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button16"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/button12"
                android:layout_margin="15dp"
                android:layout_toRightOf="@id/button15"
                android:background="@drawable/circle_orange_button"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button17"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/button13"
                android:layout_margin="15dp"
                android:background="@drawable/circle_red_button"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button18"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/button14"
                android:layout_margin="15dp"
                android:layout_toRightOf="@id/button17"
                android:background="@drawable/circle_green_button"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button19"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/button15"
                android:layout_margin="15dp"
                android:layout_toRightOf="@id/button18"
                android:background="@drawable/circle_green_button"
                android:text="."
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button20"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/button16"
                android:layout_margin="15dp"
                android:layout_toRightOf="@id/button19"
                android:background="@drawable/circle_orange_button"
                android:text="="
                android:textColor="@color/white"
                android:textSize="20sp" />


        </RelativeLayout>



    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>